part pv.1 --fstype="lvmpv" --ondisk=sda --size=1 --grow
part biosboot --fstype="biosboot" --ondisk=sda --size=1
volgroup r10vg --pesize=4096 pv.1
logvol / --fstype="xfs" --size=5000 --name=root_lv --vgname=r10vg
logvol swap --fstype="swap" --size=256 --name=swap_lv --vgname=r10vg

timesource --ntp-disable
